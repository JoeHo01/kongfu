@using Webdiyer.WebControls.Mvc;
@model PagedList<CommunityBackend.Models.Ware>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.waretype.WareTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recommended)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WareName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MarketPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderCnt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.waretype.WareTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Recommended)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WareName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MarketPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderCnt)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.WareID }) |
            @Html.ActionLink("查看", "Details", new { id = item.WareID }) |
            @Html.ActionLink("删除", "Delete", new { id = item.WareID })
        </td>
    </tr>
}

</table>
