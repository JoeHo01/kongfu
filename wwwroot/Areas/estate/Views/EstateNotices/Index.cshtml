@using Webdiyer.WebControls.Mvc;
@using CommunityBackend.Models;
@model PagedList<CommunityBackend.Models.EstateNotice>

@{
    Layout = "~/Areas/estate/Views/Shared/_layoutForFrame.cshtml";
    ViewBag.Title = "物业消息管理";
}

@Html.Partial("_SearchTable", Model)

<h2>物业消息目录</h2>

<p>
    @Html.ActionLink("创建", "Create")
</p>

@Html.Partial("_ListTable", Model)

<div class="text-right">
    @Html.Pager(Model).Options(
        o => o.SetPageIndexParameterName("id").SetHorizontalAlign("right").SetPagerItemTemplate("&nbsp;{0}")
    )
</div>
