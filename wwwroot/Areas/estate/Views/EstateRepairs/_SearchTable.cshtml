@using CommunityBackend.Models;

@using (Html.BeginForm("Search", "EstateRepairs", new RouteValueDictionary { { "id", "" }, { "area", "estate" } }, FormMethod.Get))
{
    <div class="well well-sm">
        <div class="form-group">
            <span>报修人：</span>
            <input type="text" name="kword" value="@Request.QueryString["kword"]" />
        </div>

        <div class="form-group">
            <span>报修电话：</span>
            <input type="text" name="phonenum" value="@Request.QueryString["phonenum"]" />
        </div>

        <div class="form-group">
            @Html.DropDownList("EstateRepairStatus", EnumHelper.GetSelectList(typeof(EstateRepairStatus)), "全部状态", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" value="搜索(S)" accesskey="S" class="btn btn-default" />
        </div>
    </div>
}