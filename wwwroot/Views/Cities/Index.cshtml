@model IEnumerable<CommunityBackend.Models.City>

@{
    Layout = "~/Views/Shared/_layoutForFrame.cshtml";
    ViewBag.Title = "城市管理";
}

<h2>省区目录</h2>

<p>
    @Html.ActionLink("创建", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHot)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsHot)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.CityID }) |
            @Html.ActionLink("查看", "Details", new { id = item.CityID }) |
            @Html.ActionLink("删除", "Delete", new { id = item.CityID })
        </td>
    </tr>
}

</table>
