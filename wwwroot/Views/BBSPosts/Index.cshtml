@using Webdiyer.WebControls.Mvc;
@model PagedList<CommunityBackend.Models.BBSPost>

@{
    Layout = "~/Views/Shared/_layoutForFrame.cshtml";
    ViewBag.Title = "用户帖子管理";
}

@Html.Partial("_SearchTable", Model)

<h2>用户帖子列表</h2>

<h4>
    @Html.ActionLink("管理手艺人贴子", "Index", "CraftBBSPosts")
</h4>

@Html.Partial("_PostTable", Model)

<div class="text-right">
    @Html.Pager(Model).Options(
        o => o.SetPageIndexParameterName("id").SetHorizontalAlign("right").SetPagerItemTemplate("&nbsp;{0}")
    )
</div>
