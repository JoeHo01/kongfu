@using CommunityBackend.Models;

@using (Html.BeginForm("Search", "Preorders", new RouteValueDictionary { { "id", "" } }, FormMethod.Get))
{
    <div class="well well-sm">
        <div class="form-group">
            <span>搜索下单人手机号：</span>
            <input type="text" name="kword" value="@Request.QueryString["kword"]" />
        </div>

        <div class="form-group">
            @Html.DropDownList("PreorderStatus", EnumHelper.GetSelectList(typeof(PreorderStatus)), "全部单据状态", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" value="搜索(S)" accesskey="S" class="btn btn-default" />
        </div>
    </div>
}