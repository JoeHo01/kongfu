@using CommunityBackend.Models;

@using (Html.BeginForm("Search", "Payments", new RouteValueDictionary { { "id", "" } }, FormMethod.Get))
{
    <div class="well well-sm">
        <div class="form-group">
            <span>搜索支付人手机号：</span>
            <input type="text" name="kword" value="@Request.QueryString["kword"]" />
        </div>

        <div class="form-group">
            @Html.DropDownList("PayType", EnumHelper.GetSelectList(typeof(PayType)), "全部支付类型", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.DropDownList("PayMethod", EnumHelper.GetSelectList(typeof(PayMethod)), "全部支付方式", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" value="搜索(S)" accesskey="S" class="btn btn-default" />
        </div>
    </div>
}