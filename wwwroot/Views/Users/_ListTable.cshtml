@using Webdiyer.WebControls.Mvc;
@using CommunityBackend.Models;

@model PagedList<CommunityBackend.Models.User>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.phonenumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nickname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QQopenid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.point)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.communityID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoneyBalance)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.phonenumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nickname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QQopenid)
        </td>
        <td>
            @item.gender.DisplayGenderStr()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.point)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Community.CommunityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoneyBalance)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.UserID }) |
            @Html.ActionLink("查看", "Details", new { id = item.UserID }) |
            @Html.ActionLink("删除", "Delete", new { id = item.UserID })
        </td>
    </tr>
}

</table>