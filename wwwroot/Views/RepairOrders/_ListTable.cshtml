@model PagedList<CommunityBackend.Models.RepairOrder>
@using Webdiyer.WebControls.Mvc;

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Postor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Craftman)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PostTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatueName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Postor.nickname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Craftman.nickname)
        </td>
        <td>
            @Html.ActionLink("查看", "Details", new { id=item.RepairOrderID })
        </td>
    </tr>
}

</table>

