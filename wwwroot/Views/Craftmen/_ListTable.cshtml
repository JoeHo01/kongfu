@model PagedList<CommunityBackend.Models.Craftman>
@using Webdiyer.WebControls.Mvc;
@using CommunityBackend.Models;

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.phonenumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nickname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoneyBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RateCnt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderCnt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.phonenumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nickname)
        </td>
        <td>
            @item.gender.DisplayGenderStr()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoneyBalance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RateCnt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderCnt)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.CraftmanID }) |
            @Html.ActionLink("查看", "Details", new { id = item.CraftmanID }) |
            @Html.ActionLink("删除", "Delete", new { id = item.CraftmanID })
        </td>
    </tr>
}

</table>
