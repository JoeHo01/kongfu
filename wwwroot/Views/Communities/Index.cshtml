@model IEnumerable<CommunityBackend.Models.Community>

@{
    Layout = "~/Views/Shared/_layoutForFrame.cshtml";
    ViewBag.Title = "社区管理";
    List<CommunityBackend.Models.City> cl = ViewBag.CityList;    
}

<h2>城市目录</h2>

<p>
    @Html.ActionLink("创建", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CommunityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CityID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UmenChatTribeID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CommunityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City.CityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UmenChatTribeID)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.CommunityID }) |
            @Html.ActionLink("查看", "Details", new { id = item.CommunityID }) |
            @Html.ActionLink("删除", "Delete", new { id = item.CommunityID })
        </td>
    </tr>
}

</table>
