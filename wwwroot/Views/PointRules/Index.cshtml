@model IEnumerable<CommunityBackend.Models.PointRule>

@{
    Layout = "~/Views/Shared/_layoutForFrame.cshtml";
    ViewBag.Title = "积分规则管理";
}

<h2>积分规则目录</h2>

<p>
    @Html.ActionLink("创建", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContinuedSignDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GettedPoints)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContinuedSignDays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GettedPoints)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.PointRuleID }) |
            @Html.ActionLink("删除", "Delete", new { id = item.PointRuleID })
        </td>
    </tr>
}

</table>
